# Environment Configuration
NODE_ENV=development

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/enterprise_saas
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# Service URLs (Development)
AUTH_SERVICE_URL=http://localhost:8001
NOTIFICATION_SERVICE_URL=http://localhost:8003
API_GATEWAY_URL=http://localhost:3001

# Frontend Configuration
VITE_API_URL=http://localhost:3001
VITE_USE_MOCK_AUTH=false
VITE_ENABLE_MFA=false
VITE_ENABLE_ANALYTICS=false

# Multi-Tenancy Configuration
MT_RESOLUTION_STRATEGY=subdomain,header
MT_HEADER_NAME=X-Tenant-ID
MT_CACHE_ENABLED=true
MT_CACHE_TTL=300

# Plugin System Configuration
PLUGIN_SYSTEM_ENABLED=true
PLUGIN_SANDBOX_ENABLED=true
PLUGIN_MARKETPLACE_URL=https://marketplace.enterprise-saas-template.com

# Security Configuration
ENABLE_SECURITY_SCANNING=true
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring Configuration
ENABLE_METRICS=true
ENABLE_TRACING=true
LOG_LEVEL=info

# Email Configuration (Optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@yourcompany.com

# Development Tools
ENABLE_DEV_TOOLS=true
HOT_RELOAD=true