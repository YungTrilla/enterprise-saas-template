# Enterprise SaaS Template - EditorConfig
# Maintains consistent coding styles across different editors and IDEs
# See https://editorconfig.org for more information

# Top-most EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# JavaScript and TypeScript files
[*.{js,jsx,ts,tsx}]
indent_style = space
indent_size = 2
max_line_length = 120

# Node.js configuration files  
[*.{json,jsonc}]
indent_style = space
indent_size = 2

# Package configuration
[package.json]
indent_style = space
indent_size = 2

# CSS, SCSS, and styling files
[*.{css,scss,sass,less}]
indent_style = space
indent_size = 2
max_line_length = 120

# HTML and template files
[*.{html,htm,hbs,handlebars,mustache}]
indent_style = space
indent_size = 2
max_line_length = 120

# Vue.js single file components
[*.vue]
indent_style = space
indent_size = 2

# React JSX files  
[*.{jsx,tsx}]
indent_style = space
indent_size = 2
max_line_length = 120

# YAML configuration files
[*.{yml,yaml}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# Docker files
[{Dockerfile,Dockerfile.*,*.dockerfile}]
indent_style = space
indent_size = 2

# Docker Compose
[{docker-compose.yml,docker-compose.yaml,docker-compose.*.yml,docker-compose.*.yaml}]
indent_style = space
indent_size = 2

# Shell scripts
[*.{sh,bash,zsh}]
indent_style = space
indent_size = 2
end_of_line = lf

# Python files (if any)
[*.py]
indent_style = space
indent_size = 4
max_line_length = 88

# Go files (if any)
[*.go]
indent_style = tab
indent_size = 4

# Rust files (if any)
[*.rs]
indent_style = space
indent_size = 4
max_line_length = 100

# SQL files
[*.sql]
indent_style = space
indent_size = 2

# Markdown files
[*.{md,markdown}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false
max_line_length = 80

# Documentation files
[{README,CHANGELOG,CONTRIBUTING,LICENSE,AUTHORS}.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# Configuration files
[*.{ini,cfg,conf,config}]
indent_style = space
indent_size = 2

# XML files
[*.{xml,xsd,xsl,xslt,wsdl}]
indent_style = space
indent_size = 2

# SVG files
[*.svg]
indent_style = space
indent_size = 2

# Git configuration
[.gitconfig]
indent_style = tab

# Git ignore and attributes
[{.gitignore,.gitattributes,.gitmodules}]
indent_style = space
indent_size = 2

# GitHub Actions and workflows
[.github/workflows/*.{yml,yaml}]
indent_style = space
indent_size = 2

# GitHub templates
[.github/{ISSUE_TEMPLATE,PULL_REQUEST_TEMPLATE}/*.{md,yml,yaml}]
indent_style = space
indent_size = 2

# ESLint and Prettier configuration
[{.eslintrc,.prettierrc}*]
indent_style = space
indent_size = 2

# TypeScript configuration
[{tsconfig,jsconfig}*.json]
indent_style = space
indent_size = 2

# Babel configuration
[{.babelrc,.babelrc.js,babel.config.js}]
indent_style = space
indent_size = 2

# Webpack configuration
[webpack*.{js,ts}]
indent_style = space
indent_size = 2

# Rollup configuration
[rollup*.{js,ts}]
indent_style = space
indent_size = 2

# Vite configuration
[vite*.{js,ts}]
indent_style = space
indent_size = 2

# Test files
[*.{test,spec}.{js,jsx,ts,tsx}]
indent_style = space
indent_size = 2

# Jest configuration
[jest*.{js,ts,json}]
indent_style = space
indent_size = 2

# Storybook configuration
[.storybook/*.{js,ts,json}]
indent_style = space
indent_size = 2

# Husky and Git hooks
[.husky/*]
indent_style = space
indent_size = 2
end_of_line = lf

# Environment files
[{.env,.env.*}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# Lock files (preserve exact formatting)
[{package-lock.json,yarn.lock,pnpm-lock.yaml}]
insert_final_newline = false
trim_trailing_whitespace = false

# Binary files (no formatting)
[*.{png,jpg,jpeg,gif,ico,svg,woff,woff2,ttf,eot,zip,tar,gz,rar,7z,pdf}]
insert_final_newline = false
trim_trailing_whitespace = false

# Log files
[*.log]
insert_final_newline = false
trim_trailing_whitespace = false

# Certificate files
[*.{crt,key,pem,p12,pfx}]
insert_final_newline = false
trim_trailing_whitespace = false

# Cache and temporary files
[{.DS_Store,Thumbs.db,.tmp,*.tmp,*.temp}]
insert_final_newline = false
trim_trailing_whitespace = false