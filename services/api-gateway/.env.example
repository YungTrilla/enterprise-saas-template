# API Gateway Configuration

# Service Configuration
GATEWAY_PORT=3000
NODE_ENV=development
LOG_LEVEL=info

# CORS Configuration
CORS_ORIGINS=http://localhost:3001,http://localhost:3002

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Request Configuration
REQUEST_TIMEOUT_MS=30000
BODY_SIZE_LIMIT=10mb

# Features
ENABLE_SWAGGER_UI=true
ENABLE_HEALTH_ENDPOINT=true
ENABLE_METRICS=true

# Redis Configuration (Optional)
REDIS_ENABLED=false
GATEWAY_REDIS_HOST=localhost
GATEWAY_REDIS_PORT=6379
GATEWAY_REDIS_PASSWORD=
GATEWAY_REDIS_DB=1

# JWT Configuration (Optional - for local validation)
JWT_PUBLIC_KEY=

# Service Registry
# Auth Service
AUTH_SERVICE_URL=http://localhost:3010
AUTH_SERVICE_TIMEOUT=10000
AUTH_SERVICE_RETRIES=3
AUTH_CIRCUIT_BREAKER_THRESHOLD=5
AUTH_CIRCUIT_BREAKER_TIMEOUT=60000

# Inventory Service
INVENTORY_SERVICE_URL=http://localhost:3020
INVENTORY_SERVICE_TIMEOUT=10000
INVENTORY_SERVICE_RETRIES=3
INVENTORY_CIRCUIT_BREAKER_THRESHOLD=5
INVENTORY_CIRCUIT_BREAKER_TIMEOUT=60000

# Orders Service
ORDERS_SERVICE_URL=http://localhost:3030
ORDERS_SERVICE_TIMEOUT=10000
ORDERS_SERVICE_RETRIES=3
ORDERS_CIRCUIT_BREAKER_THRESHOLD=5
ORDERS_CIRCUIT_BREAKER_TIMEOUT=60000

# Analytics Service
ANALYTICS_SERVICE_URL=http://localhost:3040
ANALYTICS_SERVICE_TIMEOUT=30000
ANALYTICS_SERVICE_RETRIES=2
ANALYTICS_CIRCUIT_BREAKER_THRESHOLD=3
ANALYTICS_CIRCUIT_BREAKER_TIMEOUT=120000